{
	"compilerOptions": {
			"target": "es6",
			"module": "commonjs",
			"noImplicitAny": true,
			"esModuleInterop": true,
			"removeComments": true,
			"preserveConstEnums": true,
			"sourceMap": true,
			"pretty": true,
			"outDir": "dist",
			"allowSyntheticDefaultImports": true,
			"declaration": true,
			"newLine": "lf"
	},
	"include": [
			"src/**/*"
, "api/users"	],
	"exclude": [
			"dist",
			"node_modules",
			"tests"
	]
}